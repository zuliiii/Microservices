
@{
    ViewData["Title"] = "SignUp";
}
@model SignUpInput

<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="mb-3">Sign Up</h2>
                <form asp-controller="Auth" asp-action="SignUp" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" type="text" class="form-control" id="userName" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="email">
                    </div>
                    <div class="mb-3">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" type="text" class="form-control" id="city">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password"  class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" >
                    </div>
                  
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


