
@{
    ViewData["Title"] = "Checkout";
}
@model CheckoutInfoInput



<form asp-controller="Order" asp-action="Checkout" method="post">
	<div class="row" style="margin-top: 5% !important">
	<div class="col-xl-8 col-lg-12 col-md-8">
		<div class="checkout-block col-md-8">
			<div class="main-card">
				<div class="bp-title">
					<h4>Billing information</h4>
				</div>
				<div class="bp-content bp-form">
					<div class="row">
						<div class="col-lg-6 col-md-12">
							<div class="form-group mt-4">
								<label asp-for="Country" class="form-label"></label>
								<input asp-for="Country" class="form-control h_50" type="text" placeholder="" value="Azerbaijan">
							</div>
						</div>
						<div class="col-lg-6 col-md-12">
							<div class="form-group mt-4">
								<label asp-for="State" class="form-label"></label>
								<input asp-for="State" class="form-control h_50" type="text" placeholder="" value="aa">
							</div>
						</div>
						<div class="col-lg-6 col-md-12">
							<div class="form-group mt-4">
								<label asp-for="City" class="form-label"></label>
								<input asp-for ="City" class="form-control h_50" type="text" placeholder="" value="baku">
							</div>
						</div>
						<div class="col-lg-6 col-md-12">
							<div class="form-group mt-4">
								<label asp-for="ZipCode" class="form-label"></label>
								<input asp-for="ZipCode" class="form-control h_50" type="text" placeholder="" value="6765">
							</div>
						</div>
							<div class="col-lg-12 col-md-12">
								<div class="form-group mt-4">
									<label asp-for="CardName" class="form-label"></label>
									<input asp-for="CardName" class="form-control h_50" type="text" placeholder="" value="master">
								</div>
							</div>
							<div class="col-lg-12 col-md-12">
								<div class="form-group mt-4">
									<label asp-for="CardNumber" class="form-label"></label>
									<input asp-for="CardNumber" class="form-control h_50" type="text" placeholder="" value="12345678">
								</div>
							</div>
							<div class="col-lg-6 col-md-12">
								<div class="form-group mt-4">
									<label asp-for="Expiration" class="form-label">Expiry date*</label>
									<input asp-for="Expiration" class="form-control h_50" type="text" placeholder="MM/YY" value="10/25">
								</div>
							</div>
							<div class="col-lg-6 col-md-12">
								<div class="form-group mt-4">
									<label asp-for="CVV" class="form-label">CVV*</label>
									<input asp-for="CVV" class="form-control h_50" type="text" placeholder="" value="666">
								</div>
							</div>
					</div>
				</div>
			</div>
		
		</div>
		</div>
		<div class="col-md-4" style="margin-top:3%">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Payment summary</h5>
					<table class="table">
						@foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
						{
							<tr>
								<td>@item.EventTitle</td>
								<td>@item.Price</td>
							</tr>
						}

						<tr>
							<td>@(ViewBag.basket.HasDiscount ? "discounted total price" : "total price")</td>
							<td>@ViewBag.basket.TotalPrice AZN</td>
						</tr>
					</table>

					<button type="submit" class= "main-btn btn-hover w-100">Complete payment</button>

						<stripe-buy-button buy-button-id="{{BUY_BUTTON_ID}}"
										   publishable-key="pk_test_51Ni0mqA8ftFBuRhUR5N3IjIxNA8OJOdPvvhUolYc2eEFJzm5AcrDwZzDMpPHhMBels8YAlb0NsZcbepH7jnQtga200wUd83RqR">
						</stripe-buy-button>
					
				</div>
			</div>
		</div>
	</div>
	</div>
</form>

