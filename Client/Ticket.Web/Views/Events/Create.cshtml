			onFinish: function () {
				alert('Wizard Completed');
			}
		});
	</script>
	<script>
		ClassicEditor
			.create(document.querySelector('#pd_editor'), {
				// toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
			})
			.then(editor => {
				window.editor = editor;
			})
			.catch(err => {
				console.error(err.stack);
			});
	</script>
